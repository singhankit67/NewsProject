<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/transparent"
    android:background="@android:color/transparent"
    app:cardPreventCornerOverlap="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:id="@+id/LLforBackground2"
        android:background="@drawable/bg_gradient"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rll">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/ImageView"
            android:transitionName="ImageView"
            android:scaleType="centerCrop"
            tools:ignore="UnusedAttribute"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_alignBottom="@+id/ImageView"
                android:src="@drawable/bottom_shadow"
                android:id="@+id/BottomShadow"/>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:id="@+id/progressBar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#fff"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginEnd="190dp"
                android:id="@+id/Author"
                android:text="Author"
                android:gravity="center_vertical"
                android:layout_marginBottom="-40dp"
                android:layout_alignTop="@+id/layoutDate"
                android:layout_alignEnd="@+id/layoutDate"
                android:layout_alignStart="@+id/Title" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ImageView"
                android:padding="5dp"
                android:id="@+id/layoutDate"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/datebackground">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_date"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginStart="27dp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="01 January 1990"
                    android:id="@+id/publishedAt"/>

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/BottomShadow"
                android:id="@+id/Title"
                android:fontFamily="@font/poppins_bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff"
                android:paddingTop="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingBottom="10dp"
                android:text="3 killed by nikku's fart"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"/>
        </RelativeLayout>


    <TextView
        android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="0dp"
        android:layout_below="@id/rll"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/poppins_light"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="@string/elapsed_time"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingBottom="5dp"
        android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/Description"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:maxEms="10"
            android:fontFamily="@font/poppins_bold"
            android:text="Source"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

            android:drawablePadding="0dp"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:id="@+id/source"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/source"
            android:text="."
            android:layout_below="@id/Description"
            android:gravity="top"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:id="@+id/dot"
            android:fontFamily="@font/poppins_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/Description"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_light"
            android:text="8 hours ago"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:ellipsize="end"
            android:layout_toEndOf="@+id/dot"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingBottom="0dp"
            android:drawablePadding="25dp"
            android:textColor="#FFFFFF"
            android:id="@+id/time1"/>
        <ImageButton
        android:id="@+id/ExpandButton1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:textStyle="bold"
        android:layout_gravity="end|bottom"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        android:elevation="7dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/source"
            android:layout_alignParentEnd="true"
            android:focusable="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>